<div class="row">
    <div class="panel panel-default">
        <div class="panel-head">
            
            <div class="container-fluid">

                <h1>Links</h1>
                
                <div>
                    <%= search_form_for @search, url: search_links_path, html: {class: "form-inline", method: :post} do |f| %>
                      <div class="input-daterange">
                        <div class="col-md-4">
                          <%= f.text_field :url_cont, class: "form-control", placeholder: "Url" %>
                        </div>
                      </div>
            
                      <div class="form-actions">
                        <%= f.submit "Search", class: "btn btn-success" %>
                      </div>
                      
                    <% end %>
                </div>        
            </div>
        </div>
        <div class="panel-body">
            
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Url</th>
                            <th>Description</th>
                            <th><%= link_to 'New', new_link_path, :class => "btn btn-success" %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @links.each do |link| %>
                        <tr>
                            <td><%= link.url %></td>
                            <td><%= link.description %></td>
                            <td>
        
                                <%= link_to 'Show', link_path(link),class: "btn btn-success" %>
                                <%= link_to 'Edit', edit_link_path(link),class: "btn btn-warning" %>
                                <%= link_to 'Delete', link_path(link), method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%>
                          
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                
                <%= will_paginate @links, renderer: BootstrapPagination::Rails %>
                
            </div>
        </div>
        <div class="panel-foot"></div>
    </div>
</div>
